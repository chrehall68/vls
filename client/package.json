{
  "name": "verilog-language-server",
  "description": "A language server for Verilog",
  "author": "chrehall68",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/chrehall68/vls"
  },
  "publisher": "chrehall68",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:verilog",
    "onLanguage:go",
    "onLanguage:plaintext"
  ],
  "main": "./out/extension",
  "contributes": {
    "languages": [
      {
        "id": "verilog",
        "aliases": [
          "Verilog"
        ],
        "extensions": [
          ".v"
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/vscode": "^1.75.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.11.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
